<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/city_Add"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Add City"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/city_Delete"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Delete City"
        app:layout_constraintStart_toEndOf="@id/city_Add"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/city_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/city_Add"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/hidden_Row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:visibility="gone">


        <EditText
            android:id="@+id/city_Name"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="Type City Name Here"

            />

        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRM"/>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>